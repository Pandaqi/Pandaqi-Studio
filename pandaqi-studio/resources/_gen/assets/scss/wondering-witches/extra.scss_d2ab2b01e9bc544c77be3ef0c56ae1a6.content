h1,h2,h3,h4,h5,h6{font-family:"Niconne",cursive;text-align:center}h2{font-size:64px;text-align:center;margin-bottom:0px}body{font-family:"Mali",cursive;background-color:#4b2142;color:#fff;font-size:16pt}.limit-width,section .center{max-width:920px}.boardgame-intro .big-header-image{filter:none}.boardgame-intro .big-header-image img{border-bottom:5px solid rgba(255,255,255,.3)}.boardgame-intro .tagline,.boardgame-intro .metadata{color:rgba(255,255,255,.8);font-weight:bold}.boardgame-intro .tagline{font-size:22px}a,a:visited{color:#97ead2}a.btn,a.btn:visited{font-family:"Niconne";background-color:#536acc;color:#000}.game-settings{background-color:#250b25;max-width:500px;margin:auto}a.btn:hover{background-color:#000064;color:#afafff}a.download-btn,a.download-btn:visited{font-size:48px}a.event-btn,a.event-btn:visited,a.download-btn,a.download-btn:visited,#btn-generate-board,#btn-generate-board:visited{background-color:#74226c;color:#97ead2;box-shadow:0 0 10px purple;font-family:"Niconne"}a.event-btn:hover,a.event-btn:visited:hover,a.download-btn:hover,a.download-btn:visited:hover,#btn-generate-board:hover,#btn-generate-board:visited:hover{background-color:#97ead2;color:#74226c}a.solution-btn,a.solution-btn:visited{background-color:#f33;color:#fff;box-shadow:0 0 10px red;font-size:16px;padding:5px;border-radius:2px;width:100%;margin:0px}a.solution-btn:hover{background-color:#fff;color:#f33}ul{margin-top:-15px}select{padding:5px}#unfold-explanation{scroll-margin:20px}#unfold-explanation h3{font-size:30px;margin-bottom:15px}#ingredientClicker{display:grid;grid-template-columns:repeat(auto-fit, minmax(124px, 1fr));grid-column-gap:10px;grid-row-gap:10px;width:100%;box-sizing:border-box}#currentCauldron .oneIngredient{width:100%;background-color:rgba(255,255,255,.8);color:#000;margin-top:10px;margin-bottom:10px;box-sizing:border-box;padding:10px;border-radius:5px;display:flex;align-content:center;justify-content:space-between;align-items:center;scroll-margin:20px}#potionResult{text-align:center;background-color:rgba(0,0,0,.3);padding:40px;border-radius:5px}.winMessage{color:#64ff64;font-size:32px}#effectsInPlay,#potionResult,#usePotionButton,#currentCauldron,#ingredientClicker,#effectExplanations{display:none;-webkit-touch-callout:none;-webkit-user-select:none;-khtml-user-select:none;-moz-user-select:none;-ms-user-select:none;user-select:none}#effectExplanations{border-left:20px solid #fff;padding-left:10px;box-sizing:border-box;background-color:rgba(0,0,0,.3);padding:10px;border-radius:5px}.effectName{padding:5px;background-color:rgba(0,0,0,.3);margin:5px;cursor:pointer;display:inline-block}.specialCellExplainer{display:flex;justify-content:center;align-items:center;align-content:center;box-sizing:border-box}.specialCellExplainer span{padding:10px;box-sizing:border-box}.specialCellSprite{background:url(webp/special_cell_spritesheet.webp) no-repeat;width:120px;height:120px;background-size:cover;display:inline-block;image-rendering:pixelated}.ingSprite,.ingSprite-small{background:url(webp/ingredient_spritesheet.webp) no-repeat;width:120px;height:120px;background-size:cover;margin:4px;display:inline-block;image-rendering:pixelated}.ingSprite-small{width:60px;height:60px}.ingButton{background-color:rgba(255,255,255,.8);border:none;border-radius:2px;box-shadow:0 0 10px #000;padding:0;text-align:center}@media all and (max-width: 600px){.ingredientName-inCauldron{display:none}}