@font-face{font-family:"Woodcutter";src:url(woodcutter.woff2);font-weight:normal;font-style:normal;font-display:swap}h1,h2,h3,h4,h5,h6{font-family:"Woodcutter",cursive;margin:60px 0px -20px 0px}h3{margin-top:10px}body{font-family:"PT Serif",serif;background-color:#6885ff;color:#111;font-size:24px}section.background-alternate{background-color:#a8b9ff;padding:20px}.board-image{margin:auto;max-width:720px}.bigQuestion{text-align:center;font-size:30pt;margin-top:60px;margin-bottom:0px}.bigQuestionButtons{display:flex;flex-wrap:wrap;width:100%;justify-content:space-around}.bigQuestionButtons div{display:block;text-align:center}a.btn,a.btn:visited{font-family:"Woodcutter";background-color:#536acc;color:#000;border-radius:10px}a.btn:hover{background-color:#000064;color:#afafff}a.download-btn,a.download-btn:visited,a.event-btn,a.event-btn:visited{background-color:#540003;color:#ff8687}a.download-btn:hover,a.event-btn:hover{background-color:#ff8687;color:#540003}select{width:50px;height:50px;font-family:"Woodcutter";background-color:#123254;border:none;color:#fff;border-radius:7px}.event{padding:20px;box-sizing:border-box;background-color:rgba(0,0,0,.7);color:#fff;border-radius:10px;box-shadow:0 0 10px #000;position:relative}.event .takeAction{display:block;margin:20px;border-left:10px solid #fff;margin-left:0px;padding-left:10px;font-weight:bold}.event .roundNumber{position:absolute;right:10px;top:10px;font-weight:bold;color:rgba(255,255,255,.3)}.boardgame-intro .big-header-image{margin-bottom:-7.5vw}@media all and (max-width: 600px){.bigQuestionButtons div{min-width:100%}}