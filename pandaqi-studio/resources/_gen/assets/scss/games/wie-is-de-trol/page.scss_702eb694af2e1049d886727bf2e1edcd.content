h1,h2,h3,h4,h5,h6{font-family:recursive,sans-serif;font-weight:900;margin-bottom:0}h2{font-size:60px}h3{font-size:38px}h3{margin-bottom:-14px;margin-top:30px}img{max-width:100%}.special-screenshot-gallery picture:first-child{grid-column:1/-1}body{font-family:recursive,sans-serif;color:#000;background-color:beige;font-size:14pt;background-image:url(wieisdetrol_bg.webp);background-size:100%;line-height:108%}.limit-width,section .center{max-width:700px}.boardgame-intro .tagline{color:#000}.boardgame-intro .big-header-image{filter:none}a{color:#248232;transition:color .3s}a:hover{color:#d25757}ul{margin-top:-15px}a.btn,a.btn:visited{font-family:recursive,sans-serif;font-weight:900;background-color:#248232;color:#fcfffc;line-height:120%}a.btn:hover{background-color:#000064;color:#afafff}a.download-btn,a.download-btn:visited{background-color:#d25757;color:rgba(255,255,255,.8)}a.download-btn:hover{background-color:#040f0f;color:#f4c095}.game-settings{background-color:#b2d265;color:#000}.game-settings .setting-remark{color:rgba(0,50,0,.85);font-weight:300}#btn-start-game{font-weight:900;font-family:recursive,sans-serif;font-size:24pt;background-color:#248232;padding:20px;margin:10px;color:#fcfffc;border-radius:10px;box-sizing:border-box;display:inline-block;transition:background-color .3s,color .3s;border-color:transparent}#btn-start-game:hover{background-color:#d25757;color:#040f0f;cursor:pointer}input[type=checkbox]{width:100%;height:100%}