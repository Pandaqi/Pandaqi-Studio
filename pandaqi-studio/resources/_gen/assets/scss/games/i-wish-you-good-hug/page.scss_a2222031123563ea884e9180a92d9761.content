body{background-color:#94ff8c;background-size:100%;font-family:zilla slab,cursive;font-size:20px;line-height:140%;color:#101010}h1,h2,h3,h4,h5,h6{font-family:original surfer,cursive}h1,h2{text-align:center;font-size:52px;margin-bottom:10px;margin-top:40px}a{color:#163916;border-bottom:3px solid;text-decoration:none;font-style:italic;transition:color .3s}a:hover{color:#781178}.buy-link{display:inline-block;padding:20px;background-color:#6bb73e;color:rgba(0,0,0,.75);border-radius:.5em;text-decoration:none;font-family:original surfer,cursive;font-size:32px;transition:background-color .5s,color .5s;box-shadow:0 0 10px 2px #333;margin:10px;max-width:100%;border:none;font-style:normal}.buy-link:hover{background-color:#944fc0;color:rgba(255,255,255,.75)}